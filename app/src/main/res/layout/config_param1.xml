<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="	#36648B"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:background="#00ffffff"
            android:fitsSystemWindows="true"
            android:text="参数配置"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#00ffffff"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/config_param1_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="参数一" />

        <Button
            android:id="@+id/config_param2_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="参数二" />

        <Button
            android:id="@+id/config_param3_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="参数三" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delay_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置开机延时间隔:"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/delay_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="3"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/normal_interval_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置正常数据上传间隔:"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/normal_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="3"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/abnormal_interval_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置异常数据上传间隔:"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/abnormal_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="3"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mess_interval_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置短信报警间隔:"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/alarminterval_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="3"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mess_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置短信报警开关:"
            android:textSize="10dp" />

        <RadioGroup
            android:id="@+id/config_mess_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/config_on_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开" />

            <RadioButton
                android:id="@+id/config_off_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sound_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置声光报警开关:"
            android:textSize="10dp" />

        <RadioGroup
            android:id="@+id/config_soud_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/config_on_soud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开" />

            <RadioButton
                android:id="@+id/config_off_soud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setDevice_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配置设置实时时间:"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_year"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_month"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_day"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_hour"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_min"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/setDevice_time_sec"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxEms="2"
            android:maxLength="2"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/config_getParams1_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="查询本页参数"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>